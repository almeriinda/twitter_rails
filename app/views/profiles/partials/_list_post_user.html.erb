<% @posts_user.each do |post| %>
  <div class="authorFooter">
   <% image_user = post.user.image.present? ? post.user.image : '/assets/img/user2-160x160.png' %>
    <%= image_tag image_user, style: 'height:73px;width:73px;' %>
    <div class="authorInfo">
      <p class="authorName"><%= post.user.name %></p>
      <p class="authorLink"><%= image_tag post.image, style: 'height:450px;width:600px;' %></p>
      <p class="authorBody"><%= post.information %></p>
    </div>
  </div>

<% end %>
<br>
