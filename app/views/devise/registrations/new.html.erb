<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<%= stylesheet_link_tag '/assets/login.css', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true, class:"box" }) do |f| %>
                    <p class="text-muted">Crie seu usu√°rio</p> 
                    <%= f.text_field :name, autofocus: true, class:"fadeIn second form-control", 
                        placeholder:"Digite o seu nome", type:"text" %>
                    <%= f.text_field :email, class:"fadeIn second", placeholder:"Digite o seu email" %>
                    <%= f.password_field :password, autocomplete: "current-password",
                        id: "password", class:"fadeIn second", placeholder:"Digite uma senha", type:"password" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",                      
                      id: "password", class:"fadeIn second", placeholder:"Digite a senha novamente", type:"password" %>  

                    <div class="actions">
                      <%= f.submit "Registrar" %>
                    </div>    

                    <div class="col-md-12">
                        <ul class="social-network social-circle">
                          <li><a href="#" class="icoFacebook" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                          <%= render "devise/shared/links" %>
                        </ul>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>


